@page "/dashboard"
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Dashboard - Mis Finanzas</PageTitle>

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">📊 Resumen</h1>
        <div class="text-muted">
            <small>Últimos 7 días</small>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <!-- Balance Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-2 small fw-medium">BALANCE</p>
                            <h2 class="mb-0 fw-bold">$0.00</h2>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-wallet2 fs-3 text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Income Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-2 small fw-medium">INGRESOS</p>
                            <h2 class="mb-0 fw-bold text-success">$0.00</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-arrow-up-circle fs-3 text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Expense Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-2 small fw-medium">GASTOS</p>
                            <h2 class="mb-0 fw-bold text-danger">$0.00</h2>
                        </div>
                        <div class="bg-danger bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-arrow-down-circle fs-3 text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Goals Progress Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-2 small fw-medium">METAS</p>
                            <h2 class="mb-0 fw-bold text-info">0/0</h2>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-bullseye fs-3 text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <!-- Doughnut Chart -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body">
                    <h5 class="card-title mb-4 fw-semibold">
                        <i class="bi bi-pie-chart-fill text-primary me-2"></i>
                        Gastos por Categoría
                    </h5>
                    <div class="text-center py-5">
                        <i class="bi bi-inbox fs-1 text-muted"></i>
                        <p class="text-muted mt-3">No hay datos para mostrar</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bar Chart -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body">
                    <h5 class="card-title mb-4 fw-semibold">
                        <i class="bi bi-bar-chart-fill text-success me-2"></i>
                        Ingresos vs Gastos
                    </h5>
                    <div class="text-center py-5">
                        <i class="bi bi-graph-up fs-1 text-muted"></i>
                        <p class="text-muted mt-3">No hay datos para mostrar</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Transactions -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body">
                    <h5 class="card-title mb-4 fw-semibold">
                        <i class="bi bi-clock-history text-primary me-2"></i>
                        Transacciones Recientes
                    </h5>
                    <div class="text-center py-5">
                        <i class="bi bi-receipt fs-1 text-muted"></i>
                        <p class="text-muted mt-3">No hay transacciones recientes</p>
                        <a href="/transactions" class="btn btn-primary mt-3">
                            <i class="bi bi-plus-circle me-2"></i>Crear Transacción
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

