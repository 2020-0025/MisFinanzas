@page "/goals"
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Metas Financieras - Mis Finanzas</PageTitle>

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-bullseye text-warning me-2"></i>
            Metas Financieras
        </h1>
        <button class="btn btn-primary rounded-pill" @onclick="OpenCreateModal">
            <i class="bi bi-plus-circle me-2"></i>Nueva Meta
        </button>
    </div>

    <!-- Empty State -->
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body text-center py-5">
            <i class="bi bi-flag fs-1 text-muted"></i>
            <h5 class="mt-3">No hay metas definidas</h5>
            <p class="text-muted">Establece tus objetivos financieros y haz seguimiento de tu progreso</p>
            <button class="btn btn-primary mt-3" @onclick="OpenCreateModal">
                <i class="bi bi-plus-circle me-2"></i>Crear Meta
            </button>
        </div>
    </div>
</div>

@code {
    private bool showModal = false;

    private void OpenCreateModal()
    {
        showModal = true;
    }
}

