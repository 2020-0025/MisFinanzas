@page "/"

<PageTitle>Home - Mis Finanzas</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h1 class="display-4 mb-4">💸 Mis Finanzas</h1>
            <p class="lead text-muted mb-5">
                Controla tus finanzas, establece metas y alcanza tus objetivos financieros.
            </p>

            <AuthorizeView>
                <Authorized>
                    <div class="d-flex gap-3 justify-content-center">
                        <a href="/dashboard" class="btn btn-primary btn-lg">
                            <i class="bi bi-speedometer2 me-2"></i>Ir al Dashboard
                        </a>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="d-flex gap-3 justify-content-center">
                        <a href="Account/Register" class="btn btn-primary btn-lg">
                            <i class="bi bi-person-plus me-2"></i>Registrarse
                        </a>
                        <a href="Account/Login" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                        </a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>

            <div class="row mt-5 g-4">
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-bar-chart-fill text-primary" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">Dashboard</h5>
                            <p class="text-muted small">Visualiza tus finanzas</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-folder-fill text-success" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">Categorías</h5>
                            <p class="text-muted small">Organiza tus gastos</p>
                        </div>
                    </div>
                </div> 
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-credit-card text-info" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">Transacciones</h5>
                            <p class="text-muted small">Registra movimientos</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-bullseye text-warning" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">Metas</h5>
                            <p class="text-muted small">Alcanza objetivos</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


