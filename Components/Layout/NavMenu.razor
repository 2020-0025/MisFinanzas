@implements IDisposable

@* @inject NavigationManager NavigationManager *@

<div class="top-row ps-3 navbar navbar-dark bg-gradient">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="">
            <i class="bi bi-piggy-bank-fill me-2"></i>
            Mis Finanzas
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="dashboard">
                        <span class="bi bi-speedometer2 fs-5 me-2" aria-hidden="true"></span> Dashboard
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="categories">
                        <span class="bi bi-folder fs-5 me-2" aria-hidden="true"></span> Categorías
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="transactions">
                        <span class="bi bi-credit-card fs-5 me-2" aria-hidden="true"></span> Transacciones
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="goals">
                        <span class="bi bi-bullseye fs-5 me-2" aria-hidden="true"></span> Metas
                    </NavLink>
                </div>

                <hr class="my-3" />

              
                <div class="nav-footer">

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="Account/Manage">
                            <span class="bi bi-person-circle fs-5 me-2" aria-hidden="true"></span>
                            @context.User.Identity?.Name
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                            <button type="submit" class="nav-link w-100 text-start border-0 bg-transparent">
                                <span class="bi bi-box-arrow-left fs-5 me-2" aria-hidden="true"></span> Cerrar Sesión
                            </button>
                        </form>
                    </div>


                </div>
              
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person-plus fs-5 me-2" aria-hidden="true"></span> Registro
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-box-arrow-in-right fs-5 me-2" aria-hidden="true"></span> Iniciar Sesión
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
