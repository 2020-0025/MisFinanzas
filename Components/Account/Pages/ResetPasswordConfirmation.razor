@page "/Account/ResetPasswordConfirmation"
@using MisFinanzas.Components.Layout

@layout MinimalLayout

@inject NavigationManager NavigationManager

<PageTitle>Contraseña Restablecida - Mis Finanzas</PageTitle>

<div class="auth-container-split">
    <div style="width: 100%; max-width: 550px; margin: 0 auto;">

        <!-- Success Card -->
        <div class="glass-card animate-slide-up" style="padding: 50px 40px; text-align: center;">

            <span style="font-size: 80px; display: block; margin-bottom: 25px;">🎉</span>

            <h1 style="color: white; font-size: 2rem; margin-bottom: 20px; font-weight: 700;">
                ¡Contraseña Restablecida!
            </h1>

            <div style="background: rgba(76, 175, 80, 0.15); border: 1px solid rgba(76, 175, 80, 0.4); border-radius: 12px; padding: 25px; margin-bottom: 30px;">
                <div style="display: flex; gap: 15px; align-items: flex-start; text-align: left;">
                    <span style="font-size: 32px;">✅</span>
                    <div>
                        <h3 style="color: white; margin: 0 0 12px 0; font-size: 1.1rem;">Cambio Exitoso</h3>
                        <p style="color: white; margin: 0 0 10px 0; line-height: 1.6;">
                            Tu contraseña ha sido actualizada correctamente. Ya puedes iniciar sesión con tu nueva contraseña.
                        </p>
                        <p style="color: white; margin: 0; font-size: 0.9rem;">
                            🔐 <strong>Seguro:</strong> Asegúrate de recordar tu nueva contraseña o guárdala en un lugar seguro.
                        </p>
                    </div>
                </div>
            </div>

            <p style="color: white; margin-bottom: 35px; line-height: 1.6; font-size: 0.95rem;">
                Haz clic en el botón de abajo para iniciar sesión con tu cuenta.
            </p>

            <!-- Action Buttons -->
            <div style="display: flex; flex-direction: column; gap: 12px;">
                <a href="/Account/Login" class="btnLogin" style="width: 100%; text-align: center; padding: 14px; display: block; text-decoration: none; font-size: 1.1rem; font-weight: 600;">
                    Iniciar Sesión
                </a>
                <a href="/" class="glass-button" style="width: 100%; text-align: center; padding: 12px; display: block; text-decoration: none;">
                    Volver al Inicio
                </a>
            </div>
        </div>

        <!-- Security Tips Card -->
        <div class="glass-card animate-slide-up animate-delay-1" style="padding: 30px; margin-top: 25px; background: rgba(33, 150, 243, 0.1); border: 1px solid rgba(33, 150, 243, 0.3);">
            <h2 style="color: white; font-size: 1.3rem; margin-bottom: 20px; text-align: center;">
                🛡️ Consejos de Seguridad
            </h2>
            <div style="display: flex; flex-direction: column; gap: 15px;">
                <div style="display: flex; gap: 15px; align-items: flex-start;">
                    <span style="font-size: 24px;">🔒</span>
                    <div>
                        <h3 style="color: white; margin: 0 0 5px 0; font-size: 1rem;">Usa contraseñas únicas</h3>
                        <p style="color: white; margin: 0; font-size: 0.9rem; line-height: 1.5;">
                            No reutilices esta contraseña en otros sitios web o servicios
                        </p>
                    </div>
                </div>
                <div style="display: flex; gap: 15px; align-items: flex-start;">
                    <span style="font-size: 24px;">🔑</span>
                    <div>
                        <h3 style="color: white; margin: 0 0 5px 0; font-size: 1rem;">Guárdala de forma segura</h3>
                        <p style="color: white; margin: 0; font-size: 0.9rem; line-height: 1.5;">
                            Usa un gestor de contraseñas o anótala en un lugar seguro
                        </p>
                    </div>
                </div>
                <div style="display: flex; gap: 15px; align-items: flex-start;">
                    <span style="font-size: 24px;">🚫</span>
                    <div>
                        <h3 style="color: white; margin: 0 0 5px 0; font-size: 1rem;">No la compartas</h3>
                        <p style="color: white; margin: 0; font-size: 0.9rem; line-height: 1.5;">
                            Nunca compartas tu contraseña por email, teléfono o mensaje
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


